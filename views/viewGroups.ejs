<%- include("./headerAdmin.ejs") %>
<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content">
				<div class="container-fluid">
					<!-- OVERVIEW -->
					<div class="panel panel-headline">
						
						
					<!-- END OVERVIEW -->
					<div class="row">
						<div class="col-md-12">
							<!-- RECENT PURCHASES -->
							<div class="panel">
								<div class="panel-heading">
									<h3 class="panel-title">All Groups</h3>
									
									<div class="row">
										<div class="col-md-4">
										
										  </div>
										<div class="col-md-4"></div>
										<div class="col-md-4">
											<input type="text" id="myInput" class="form-control" placeholder="Search ...">
										</div>
									</div>
								</div>
								<script>
									
									window.onload = function(){
										
									  $("#myInput").on("keyup", function() {
										var value = $(this).val().toLowerCase();
										$("#myTable tr").filter(function() {
										  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
										});
									  });
									};
									</script>
								<div class="panel-body no-padding">
									
									<br>
									<div class="container">
										
									</div>
									
									<table class="table table-striped " style="margin-top:2%" id="myTable">
										<thead>
											<tr>
												<th>Sr. No.</th>
												<th>Group ID</th>
												<th>Members Count</th>
                                                <th>Status</th><!-- status can be  InComplete, Complete, Paid -->
                                                
												<th>Action</th>
												

											</tr>
										</thead>
										<tbody>
											
                                            <% count = 0; stat='red'%> 
											<% groups.forEach(group => {
											count += 1;	 %>
                                        <tr>
                                            <td><%=count %></td>
                                            <td><%= group._id %></td>
											<td><%= group.members.length %></td>
											<% if (group.status=='COMPLETE') { stat='blue'} %>
											<% if (group.status=='INCOMPLETE') { stat='red'} %>
											<% if (group.status=='PAID') { stat='green'} %>
                                            <td style="color:<%= stat %>"><%= group.status %></td>
                                            <!-- Group ID to Be Added !-->
                                            <td>
                                            <a href="/admin/groups/details/<%=group._id %> "><i class="fa fa-eye" aria-hidden="true"></i></a></td>

										</tr>
										<% }) %>
                                        
											
										</tbody>
									</table>
								</div>
								<div class="panel-footer">
									Total <%= count %> groups..
								</div>
							</div>
							<!-- END RECENT PURCHASES -->
						</div>
						
						</div> 
					</div>
					
				
				</div>
			</div>
			 <!-- END MAIN CONTENT -->
			
		</div>
		<%- include("./footerAdmin.ejs") %>