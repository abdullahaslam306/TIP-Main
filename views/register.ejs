<%- include("./headerAdmin.ejs") %>

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content ">
        <div class="container-fluid">
            <div class="panel panel-profile">
                <div class="clearfix">
                   
                        <div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>
                    
                        <div class="panel-heading">
                            <h3 class="panel-title">New Admin</h3>
                        </div>
                        <div class="panel-body">
                            <form action="/admin/newAdmin" method="post" onsubmit="return verify()">
                            
                             
                            <div class="form-group">
                              <label for="mobileInput">Email</label>
                              <input type="email" class="form-control" id="phoneInput"   placeholder="Enter Email" name='email' >
                            </div>
                              <div class="form-group">
                                <label for="mobileInput">Password</label>
                                <input type="password" onkeydown="myFunction()" class="form-control" id="pass1" required   placeholder="Enter new password" name='password' >
                                <div class="invalid-feedback text-danger">
                                  Please choose a username.
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="mobileInput">Confirm Password</label>
                                <input type="password" onkeydown="myFunction()" class="form-control" id="pass2" required  placeholder="Re-enter  password" name='confirmpass' >
                                <div class="invalid-feedback text-danger">
                                  Please choose a username.
                                </div>
                              </div>
                              
                               

                            <div class="text-center"><button type="submit"  class="btn btn-primary  btn-lg"><i class="fa fa-plus-square-o"></i> Add</button></div>
                        </form>
                            
                        </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>
</div>
   
    <!-- END MAIN CONTENT -->
</div>


<%- include("./footerAdmin.ejs") %>
<script>
  document.getElementsByClassName('invalid-feedback')[0].style.display = 'none';
 document.getElementsByClassName('invalid-feedback')[1].style.display = 'none'; 
function myFunction(){
 document.getElementsByClassName('invalid-feedback')[0].style.display = 'none';
 document.getElementsByClassName('invalid-feedback')[1].style.display = 'none';}
 function verify()
 { 
   password1=document.getElementById('pass1').value
   password2=document.getElementById('pass2').value
   if(password1.length>=8 && password2.length>=8)
   { 
     if(password1==password2)
     { 
       return true
     }
     else{  document.getElementsByClassName('invalid-feedback')[0].innerHTML= 'Password does not match match.';
     document.getElementsByClassName('invalid-feedback')[1].innerHTML= 'Password does not match match.';
    
       document.getElementsByClassName('invalid-feedback')[0].style.display = 'block';
      document.getElementsByClassName('invalid-feedback')[1].style.display = 'block';
       return false
     }
     return true
   }
   else{
     document.getElementsByClassName('invalid-feedback')[0].innerHTML= 'Password should be longer than 8 charchters';
     document.getElementsByClassName('invalid-feedback')[1].innerHTML= 'Password should be longer than 8 charchters';
     document.getElementsByClassName('invalid-feedback')[0].style.display = 'block';
      document.getElementsByClassName('invalid-feedback')[1].style.display = 'block';
     return false
   }
 }
</script>
