<%- include("./header.ejs") %>
<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content ">
				<div class="container-fluid">
					<div class="panel panel-profile">
						<div class="clearfix">
							<!-- LEFT COLUMN -->
							
								<div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>
							
								<div class="panel-heading">
									<h3 class="panel-title">Reply</h3>
								</div>
								<div class="panel-body">
									
									<form action="/admin/contact/reply" method="post" >
									  <div class="form-group">
                                         
									    <label for="message">From:</label>
									    <input type="text" class="form-control" name="replyto" value="<%=from %>"readonly>
                                      </div>
                                      <div class="form-group">
                                         
									    <label for="message">Subject:</label>
									    <input type="text" class="form-control" name="subject"  value="<%=subject %>"readonly>
									   
									  </div>
                                      <div class="form-group">
                                        <label for="yourtextarea">Message:</label>
                                        <textarea class="form-control"  id="exampleFormControlTextarea1" required rows="5" readonly><%=message %></textarea>
                                      </div>
                                      <div class="form-group">
                                        <label for="yourtextarea">Reply:</label>
                                        <textarea class="form-control"  name="reply" required rows="5" required></textarea>
                                      </div>
                                      <br>
                                                                           <div class="profile-info">
										<h4 class="heading">Note</h4>
										<p>Your Message will be sent through email.</p>
									</div>

									<div class="text-center"><button type="submit"   class="btn btn-primary  btn-lg"><i class="fa fa-send"></i> Send Messsage</button></div>
								</form>
								<br>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
		
	
		
			<%- include("./footer.ejs"); %>