<%- include("./headerAdmin.ejs") %>
<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content">
				<div class="container-fluid">
					<!-- OVERVIEW -->
					<div class="panel panel-headline">
						
						
					<!-- END OVERVIEW -->
					<div class="row">
						<div class="col-md-12">
							<!-- RECENT PURCHASES -->
							<div class="panel">
								<div class="panel-heading">
									<h3 class="panel-title">All Transactions</h3>
									
									<div class="row">
										<div class="col-md-4">
										
										  </div>
										<div class="col-md-4"></div>
										<div class="col-md-4">
											<input type="text" id="myInput" class="form-control" placeholder="Search ...">
										</div>
									</div>
								</div>
								<script>
									
									window.onload = function(){
										
									  $("#myInput").on("keyup", function() {
										var value = $(this).val().toLowerCase();
										$("#myTable tr").filter(function() {
										  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
										});
									  });
									};
									</script>
								<div class="panel-body no-padding">
									
									<br>
									<div class="container">
										
									</div>
									
									<table class="table table-striped" id="myTable">
										<thead>
											<tr>
                                                <th>Tr No.</th>
                                                <th>User ID</th>
												<th>Type</th>
												<th>Amount</th>
												<th>Date &amp; Time</th>
												<th>Status</th>
											</tr>
										</thead>
										<tbody>

                                            <% count = 0; stat='warning'%> 
											<% results.forEach(result => {
                                                count += 1;		 %>
												<% if (result.status=='COMPLETE') { stat='success'} %>
												<% if (result.status=='PENDING') { stat='warning'} %>
											<tr>
												
												<td><%= result._id %> </td>
												<td><%= result.userid %></td>
												<td><%= result.txType %></td>
                                                <td><%= result.amount %></td>
                                                <td><%= result.createdAt %></td>
												<td><span class="label label-<%= stat %>"><%= result.status %></span></td>
											</tr>
                                            <% }) %>
                                            <% if (count==0) { %>
                                                <tr> <td>no transactions yet</td></tr>
                                                <% }%>
											
											
										</tbody>
									</table>
								</div>
								<div class="panel-footer">
									Total <%= count %> Transaction(s)..
								</div>
							</div>
							<!-- END RECENT PURCHASES -->
						</div>
						
						</div> 
					</div>
					
				
				</div>
			</div>
			 <!-- END MAIN CONTENT -->
			
		</div>
		<%- include("./footerAdmin.ejs") %>