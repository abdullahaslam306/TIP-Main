<%- include("./headerAdmin.ejs") %>
<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content">
				<div class="container-fluid">
					<!-- OVERVIEW -->
					<div class="panel panel-headline">
						
						
					<!-- END OVERVIEW -->
					<div class="row">
						<div class="col-md-12">
							<!-- RECENT PURCHASES -->
							<div class="panel">
								<div class="panel-heading">
									<h3 class="panel-title">Users Data</h3>
									<div class="row">
										<div class="col-md-8"></div>
										<div class="col-md-4">
											<input type="text" id="myInput" class="form-control" placeholder="Search ...">
										</div>
									</div>
									<div class="container">
										<% if (message) { %>
                                       
                                      
											<div class="alert alert-success" role="alert" id='error-msg'>
												<script>setTimeout(function(){
													document.getElementById('error-msg').style.display = 'none';
												 }, 3000);</script>
												<%= message %> 
											  </div>
											
											<% } %>
									</div>
								</div>
								<script>
									
									window.onload = function(){
										
									  $("#myInput").on("keyup", function() {
										var value = $(this).val().toLowerCase();
										$("#myTable tr").filter(function() {
										  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
										});
									  });
									};
									</script>
								<div class="panel-body no-padding">
									<table class="table table-striped" id="myTable">
										<thead>
											<tr>
												<th>Sr. No.</th>
												<th>First Name</th>
												<th>Last Name</th>
												<th>Email</th>
												<th>Phone</th>
												<th></th>
												<th></th>

											</tr>
										</thead>
										<tbody>
											<% count = 0; %> 
											<% users.forEach(user => {
											count += 1;	 %>
											 
											
											<tr>
												<td><a href="#"><%=count %></a></td>
												<td><%= user.fname %> </td>
												<td><%= user.lname %></td>
												<td><%= user.email %></td>
												<td><%= user.phone %></td>
												
												<td>
                   <a href="/admin/user/edit/<%=user._id %> "><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
                   <td> <a href="/admin/user/delete/<%=user._id %> "><i class="fa fa-trash" aria-hidden="true"></i></a></td>
               
											</tr>
											<% }) %>
											
										</tbody>
									</table>
								</div>
								<div class="panel-footer">
									Total <%= count %> users..
								</div>
							</div>
							<!-- END RECENT PURCHASES -->
						</div>
						
						</div> 
					</div>
					
				
				</div>
			</div>
			 <!-- END MAIN CONTENT -->
			
		</div>
		<%- include("./footerAdmin.ejs") %>