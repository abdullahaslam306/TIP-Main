<%- include("./headerAdmin.ejs") %>

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content ">
        <div class="container-fluid">
            <div class="panel panel-profile">
                <div class="clearfix">
                   
                        <div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>
                    
                        <div class="panel-heading">
                            <h3 class="panel-title">Edit Profile</h3>
                        </div>
                        <div class="panel-body">
                            <form action="/admin/user/update" method="post" onsubmit="return verify()">
                            <input type="hidden" class="form-control" id="email" value='<%= email %>' name="email"  required>
                            <div class="form-group">
                                <label for="mobileInput">First Name</label>
                                <input type="text" class="form-control" id="nameInput" value='<%= fname %>' name="fname"  required>
                               
                              </div>
                              <div class="form-group">
                                <label for="mobileInput">Last Name</label>
                                <input type="text" class="form-control" id="lname"  value='<%= lname %>' name='lname'  required>
                                
                              </div>
                              <div class="form-group">
                                <label for="mobileInput">Phone</label>
                                <input type="text" class="form-control" id="phoneInput"   value='<%= phone %>' name='phone'  required>
                                
                              </div>
                              <div class="form-group">
                                <label for="mobileInput">Password</label>
                                <input type="text" class="form-control" id="password" onkeypress="hideagain()"   placeholder="Enter new password" name='password' >
                                <div class="invalid-feedback text-danger">
                                  Password should be longer than 8 charcters.
                                </div>
                              </div>
                              
                                <div class="profile-info">
                                <h4 class="heading">Note</h4>
                                <p>Your Information will be permanently changed.</p>
                            </div>

                            <div class="text-center"><button type="submit"  class="btn btn-primary  btn-lg"><i class="fa fa-download"></i> Save</button></div>
                        </form>
                            
                        </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>
</div>
   
    <!-- END MAIN CONTENT -->
</div>
<script>
  function hideagain(){document.getElementsByClassName('invalid-feedback')[0].style.display = 'none';}
   document.getElementsByClassName('invalid-feedback')[0].style.display = 'none';
  function verify(){ 
  var pass= document.getElementById('password').value;
  if(pass=='')
  { return true; }
  else if(pass.length>=8)
  { return true; }
  else{
    document.getElementsByClassName('invalid-feedback')[0].style.display = 'block';
    return false;
  }}
</script>

