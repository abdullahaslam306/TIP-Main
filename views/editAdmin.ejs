<%- include("./headerAdmin.ejs") %>

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content ">
        <div class="container-fluid">
            <div class="panel panel-profile">
                <div class="clearfix">
                   
                        <div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>
                    
                        <div class="panel-heading">
                            <h3 class="panel-title">Edit Admin</h3>
                        </div>
                        <div class="panel-body">
                            <form action="/admin/update" method="post">
                            <input type="hidden" class="form-control" id="email" value='<%= email %>' name="email"  required>
                            
                             
                             
                              <div class="form-group">
                                <label for="mobileInput">Password</label>
                                <input type="text" class="form-control" id="phoneInput"   placeholder="Enter new password" name='password' >
                                
                              </div>
                              
                                <div class="profile-info">
                                <h4 class="heading">Note</h4>
                                <p>Your Password will be permanently changed.</p>
                            </div>

                            <div class="text-center"><button type="submit"  class="btn btn-primary  btn-lg"><i class="fa fa-download"></i> Save</button></div>
                        </form>
                            
                        </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>
</div>
   
    <!-- END MAIN CONTENT -->
</div>


<%- include("./footerAdmin.ejs") %>