<%- include("./header.ejs") %>

<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content ">
				<div class="container-fluid">
					<div class="panel panel-profile">
						<div class="clearfix">
							<!-- LEFT COLUMN -->
							<div style="width:70%;height:70%; margin:auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-show'>
								<!-- PROFILE HEADER -->
								<div class="profile-header">
									<div class="overlay"></div>
									<div class="profile-main">
										<img src="/userasset/img/user-medium.png" class="img-circle" alt="Avatar">
										<h3 class="name">Samuel Gold</h3>
										<!-- <span class="online-status status-available">Available</span> -->
									</div>
									<div class="profile-stat">
										<div class="row">
											<div class="col-md-6 stat-item">
												1 <span>Level</span>
											</div>
											<div class="col-md-6 stat-item">
												15 <span>Friends</span>
											</div>
											
										</div>
									</div>
								</div>
								<!-- END PROFILE HEADER -->
								<!-- PROFILE DETAIL -->
								<div class="profile-detail">
									<div class="profile-info">
										<h4 class="heading">Basic Info</h4>
										<ul class="list-unstyled list-justify">
											<li>Email <span><%= email %> </span></li>
											<li>First name <span><%= fname %> </span></li>
											<li>Last Name <span><%= lname %> </span></li>
											<li>Contact <span><%= phone %> </span></li>
											


											
										</ul>
									</div>
									
									<div class="profile-info">
										<h4 class="heading">About</h4>
										<p>Interactively fashion excellent information after distinctive outsourcing.</p>
									</div>
									<div class="text-center"><a onclick="flip()" class="btn btn-primary btn-lg">Edit Profile</a></div>
								</div>
								<!-- END PROFILE DETAIL -->
							</div>
								<div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>
							
								<div class="panel-heading">
									<h3 class="panel-title">Edit Profile</h3>
								</div>
								<div class="panel-body">
									<form action="/user/update" method="post">
									<input type="hidden" class="form-control" id="email" value='<%= email %>' name="email"  required>
									<div class="form-group">
									    <label for="mobileInput">First Name</label>
									    <input type="text" class="form-control" id="nameInput" value='<%= fname %>' name="fname"  required>
									   
									  </div>
									  <div class="form-group">
									    <label for="mobileInput">Last Name</label>
									    <input type="text" class="form-control" id="lname"  value='<%= lname %>' name='lname'  required>
									    
									  </div>
									  <div class="form-group">
									    <label for="mobileInput">Phone</label>
									    <input type="text" class="form-control" id="phoneInput"   value='<%= phone %>' name='phone'  required>
									    
									  </div>
									    <div class="profile-info">
										<h4 class="heading">Note</h4>
										<p>Your Information will be permanently changed.</p>
									</div>

									<div class="text-center"><button type="submit" onclick='flip2()' class="btn btn-primary  btn-lg"><i class="fa fa-download"></i> Save</button></div>
								</form>
									
								</div>
							
		
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
			<script>

   
document.getElementById('profile-form').style.display="none";
        
        function flip()
        {
        	document.getElementById('profile-show').style.display="none";
        	document.getElementById('profile-form').style.display="block";
        }
           function flip2()
        {
        	document.getElementById('profile-show').style.display="block";
        	document.getElementById('profile-form').style.display="none";
        }
			</script>
			<!-- END MAIN CONTENT -->
		</div>
<%- include("./footer.ejs"); %>
