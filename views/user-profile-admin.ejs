<%- include("./headerAdmin.ejs") %>

<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content ">
				<div class="container-fluid">
					<div class="panel panel-profile">
						<div class="clearfix">
							<!-- LEFT COLUMN -->
							<div style="width:70%;height:70%; margin:auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-show'>
								<!-- PROFILE HEADER -->
								<div class="profile-header">
									<div class="overlay"></div>
									<div class="profile-main">
										<img src="assets/img/user-medium.png" class="img-circle" alt="Avatar">
										<h3 class="name">Samuel Gold</h3>
										<!-- <span class="online-status status-available">Available</span> -->
									</div>
									<div class="profile-stat">
										<div class="row">
											<div class="col-md-6 stat-item">
												1 <span>Level</span>
											</div>
											<div class="col-md-6 stat-item">
												15 <span>Friends</span>
											</div>
											
										</div>
									</div>
								</div>
								<!-- END PROFILE HEADER -->
								<!-- PROFILE DETAIL -->
								<div class="profile-detail">
									<div class="profile-info">
										<h4 class="heading">Basic Info</h4>
										<ul class="list-unstyled list-justify">
											<li>Birthdate <span>24 Aug, 2016</span></li>
											<li>Mobile <span>(124) 823409234</span></li>
											<li>Email <span>samuel@gmail.com</span></li>
											<li>Address <span>ABC home 2344</span></li>
											<li>City <span>Rochester</span></li>
											<li>State <span>New York</span></li>


											
										</ul>
									</div>
									
									<div class="profile-info">
										<h4 class="heading">About</h4>
										<p>Interactively fashion excellent information after distinctive outsourcing.</p>
									</div>
									<div class="text-center"><a onclick="flip()" class="btn btn-primary btn-lg">Edit Profile</a></div>
								</div>
								<!-- END PROFILE DETAIL -->
							</div>
								<div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>
							
								<div class="panel-heading">
									<h3 class="panel-title">Edit Profile</h3>
								</div>
								<div class="panel-body">
									  <div class="form-group">
									    <label for="mobileInput">Mobile</label>
									    <input type="text" class="form-control" id="mobileInput"  required>
									   
									  </div>
									  <div class="form-group">
									    <label for="mobileInput">Address</label>
									    <input type="text" class="form-control" id="address"  required>
									    
									  </div>
									    <div class="form-row">
									    <div class="form-group col-md-6">
									      <label for="inputCity">City</label>
									      <input type="text" class="form-control" id="inputCity">
									    </div>
									    <div class="form-group col-md-4">
									      <label for="inputState">State</label>
									      <select id="inputState" class="form-control">
									        <option selected>Choose...</option>
									        <option>...</option>
									      </select>
									    </div>
									    <div class="form-group col-md-2">
									      <label for="inputZip">Zip</label>
									      <input type="text" class="form-control" id="inputZip">
									    </div>
									  </div>
                                      <div class="profile-info">
										<h4 class="heading">Note</h4>
										<p>Your Information will be permanently changed.</p>
									</div>

									<div class="text-center"><button type="button" onclick='flip2()' class="btn btn-primary  btn-lg"><i class="fa fa-download"></i> Save</button></div>
									
									
								</div>
							
		
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
			<script>

   
document.getElementById('profile-form').style.display="none";
        
        function flip()
        {
        	document.getElementById('profile-show').style.display="none";
        	document.getElementById('profile-form').style.display="block";
        }
           function flip2()
        {
        	document.getElementById('profile-show').style.display="block";
        	document.getElementById('profile-form').style.display="none";
        }
			</script>
			<!-- END MAIN CONTENT -->
		</div>
		<%- include("./footerAdmin.ejs") %>
