<%- include("./header.ejs")  %> 

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content ">
        <div class="container-fluid">
            <div class="panel panel-profile">
                <div class="clearfix">
                    <!-- LEFT COLUMN -->
                    
                        <div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>                    
                        <div class="panel-heading">
                        <h3 class="panel-title">Initial Payment</h3>
                        </div>
                        <div class="panel-body">
                            
                                <% if (success) { %>
                               
                                    
                                    <div class="alert alert-success" role="alert" id='error-msg1'>
                                        <script>setTimeout(function(){
                                            document.getElementById('error-msg1').style.display = 'none';
                                         }, 3000);</script>
                                        <%= success %> 
                                      </div>
                                    
                                    <% } %>
                                    <% if (failure) { %>
                               
                                       
                                        <div class="alert alert-danger" role="alert" id='error-msg'>
                                            <script>setTimeout(function(){
                                                document.getElementById('error-msg').style.display = 'none';
                                             }, 3000);</script>
                                            <%= failure %> 
                                          </div>
                                       
                                        <% } %>
                            
