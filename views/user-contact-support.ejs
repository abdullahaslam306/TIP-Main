<%- include("./header.ejs") %>
<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content ">
				<div class="container-fluid">
					<div class="panel panel-profile">
						<div class="clearfix">
							<!-- LEFT COLUMN -->
							
								<div  style="width:70%;height:70%; margin:40px auto; box-shadow: 2px 8px 8px 8px #888888;" id='profile-form'>
							
								<div class="panel-heading">
									<h3 class="panel-title">Contact Support</h3>
								</div>
								<div class="panel-body">
									
									<form action="/user/contact/send" method="post" >
									  <div class="form-group">
                                          <input type="hidden" value="<%= email %>" name="from">
									    <label for="message">Subject:</label>
									    <input type="text" class="form-control" id="subject" name = "subject"  required>
									   
									  </div>
                                      <div class="form-group">
                                        <label for="yourtextarea">Your Message:</label>
                                        <textarea class="form-control" name="message" id="exampleFormControlTextarea1" required rows="5" placeholder="Type tour message here..."></textarea>
                                      </div>
                                      <br>
                                      <% if (success) { %>
                                       
                                      
                                      <div class="alert alert-success" role="alert" id='success-msg'>
                                          <script>setTimeout(function(){
                                              document.getElementById('success-msg').style.display = 'none';
                                           }, 2000);</script>
                                          <%= success %> 
                                        </div>
                                      </div>
                                      <% } %>
                                      <div class="profile-info">
										<h4 class="heading">Note</h4>
										<p>Support will reply to your query in next 24 hours.</p>
									</div>

									<div class="text-center"><button type="submit"   class="btn btn-primary  btn-lg"><i class="fa fa-send"></i> Send Messsage</button></div>
								</form>
								<br>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
		
	
		
			<%- include("./footer.ejs"); %>